include <stdio.h>
#include <stdlib.h>

void bubble(int vet[], int n){
    int i,j,aux,cont=0;
    for(i=0;i<n;i++){
        printf("%d ",vet[i]);
            for(j=1;j<n-i;j++){

                if(vet[j]<vet[j-1]){
                      aux  = vet[j];
                      vet[j] = vet[j - 1];
                      vet[j - 1] = aux;
                      cont++;
                    }

            }
    }
   printf("%d",cont);
   if(cont%2 == 0)
    printf("\nCarlos\n");
   else
    printf("\nMarcelo\n");
}

int main () {
    int i,tam;

    printf("Entre com o tamanho do vetor: ");
    scanf("%d",&tam);
    int vet[tam];

    for(i=0;i<tam;i++){
       printf("Digite o %d elemento ",i+1);
       scanf("%d",&vet[i]);
    }
    bubble(vet,tam);
    for(i=0;i<tam;i++){
        printf("%d",vet[i]);
    }
}






